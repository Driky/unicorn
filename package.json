{
  "name": "@isthatcentered/mono",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Edouard",
  "license": "MIT",
  "private": true,
  "scripts": {
    "pretty": "yarn pretty-quick",
    "clean": "npx lerna clean -y && rm -rf node_modules && npx lerna bootstrap"
  },
  "devDependencies": {
    "commitizen": "^4.0.3",
    "husky": "^3.0.9",
    "lerna": "^3.18.3",
    "prettier": "1.18.2",
    "pretty-quick": "^2.0.0"
  },
  "workspaces": [
    "./packages/*"
  ],
  "nohoist": [],
  "husky": {
    "hooks": {
      "pre-commit": "yarn pretty-quick --staged",
      "prepare-commit-msg": "exec < /dev/tty && yarn git-cz --hook"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
